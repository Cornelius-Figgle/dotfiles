{
  "layer": "top",
  "position": "top",
  "height": 20,
  //"width": ,  // auto width
  "margin": "0 0 0 0",



  "modules-left": [
    "river/tags"
  ],
  "modules-center": [
    "river/window"
  ],
  "modules-right": [
    "wireplumber",
    "network",
    "clock"
  ],



  "river/tags": {
    "num-tags": 10
  },
  "river/window": {
    "format": "{}"
  },
  "wireplumber": {
    "format": "{volume}%",
    "format-muted": "ï€¦",
    "max-volume": 100,
    "scroll-step": 5,
    "on-click": ""
  },
  "network": {
    "interval": 3,
    "interface": "eno1",
    "format": "{ipaddr}",
    "format-alt": "{bandwidthUpBits}, {bandwidthDownBits}",
    "tooltip-format": "{ifname}"
  },
  "clock": {
    "interval": 1,
		"format": "{:%H:%M:%S}",
    "format-alt": "{:%Y-%m-%d}",
    "tooltip-format": "{:%A}"
	}
}