/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"JetBrainsMonoNL Nerd Font 9";
}

window {
    width:      			320px;
    padding:    			15px;
    border:					0px 0px 0px 0px;
    border-radius:          10px;
    border-color:           @se;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@ac;
}
