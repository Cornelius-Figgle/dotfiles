{
  "layer": "top",
  "position": "top",
  "height": 20,
  //"width": ,  // auto width
  "margin": "0 0 0 0",



  "modules-left": [
    "river/tags"
  ],
  "modules-center": [
    "river/window"
  ],
  "modules-right": [
    "mpris",
    "wireplumber",
    "network",
    "clock"
  ],



  "river/tags": {
    "num-tags": 9
  },
  "river/window": {
    "format": "{}"
  },
  "mpris": {
    "format": "{title} {status_icon} [{player}]",
    "tooltip-format": "{artist} \"{album}\"",
    "status-icons": {
      "playing": "▶",
      "paused": "⏸",
      "stopped": ""
    },
    "title-len": 20
  },
  "wireplumber": {
    "format": "{volume}%",
    "format-muted": "",
    "max-volume": 100,
    "scroll-step": 5,
    "on-click": "pamixer --toggle-mute"
  },
  "network": {
    "interval": 3,
    "interface": "eno1",
    "format": "{ipaddr}",
    "format-alt": "{bandwidthUpBits}, {bandwidthDownBits}",
    "tooltip-format": "{ifname}"
  },
  "clock": {
    "interval": 1,
		"format": "{:%H:%M:%S}",
    "format-alt": "{:%Y-%m-%d}",
    "tooltip-format": "{:%A}"
	}
}
